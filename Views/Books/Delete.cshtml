@using Books.Data.ViewModels;
@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <p>
        <h1>Delete confirmation for @Model.Title</h1>
    </p>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" disabled />
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
        </div>
    }

    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
</form>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}





